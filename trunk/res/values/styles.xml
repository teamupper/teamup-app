<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="numberPickerUpButtonStyle">@style/NPWidget.Holo.ImageButton.NumberPickerUpButton</item>
        <item name="numberPickerDownButtonStyle">@style/NPWidget.Holo.ImageButton.NumberPickerDownButton</item>
        <item name="numberPickerInputTextStyle">@style/NPWidget.Holo.EditText.NumberPickerInputText</item>
        <item name="numberPickerStyle">@style/NPWidget.Holo.NumberPicker</item>
    </style>
    
   <style name="TextoBotonesHome"
     parent="@android:style/TextAppearance.Medium">
       <item name="android:typeface">sans</item>
       <item name="android:padding">5sp</item>
       <item name="android:textColor">#610E0E</item>
   </style>
   
   <style name="CustomDialogTheme" parent="@android:style/Theme.Dialog">
    <item name="android:bottomBright">#303030</item>
    <item name="android:bottomDark">#303030</item>
    <item name="android:bottomMedium">#303030</item>
    <item name="android:centerBright">#303030</item>
    <item name="android:centerDark">#303030</item>
    <item name="android:centerMedium">#303030</item>
    <item name="android:fullBright">@android:color/black</item>
    <item name="android:fullDark">@android:color/black</item>
    <item name="android:topBright">#303030</item>
    <item name="android:topDark">#303030</item>
</style>

 <style name="DashboardButton">
  <item name="android:layout_gravity">center_vertical</item>
  <item name="android:layout_width">wrap_content</item>
  <item name="android:layout_height">wrap_content</item>
  <item name="android:gravity">center_horizontal</item>
  <item name="android:drawablePadding">2dp</item>
  <!--<item name="android:textSize">@dimen/text_size_small</item>-->
  <item name="android:textStyle">bold</item>
  <!--<item name="android:textColor">@color/accent_1</item>-->
    <item name="android:background">@null</item>
</style>
    
</resources>